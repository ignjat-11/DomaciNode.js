<form action="/api/login" method="POST" class="login-form">

    <h2>Login</h2>

    <div>
        <label>Email:</label>
        <input type="email" name="email" required />
    </div>

    <div>
        <label>Password:</label>
        <input type="password" name="password" required />
    </div>

    <button type="submit">Login</button>

</form>
